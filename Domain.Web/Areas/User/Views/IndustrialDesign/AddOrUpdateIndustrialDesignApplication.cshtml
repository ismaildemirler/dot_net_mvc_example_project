@using Domain.Web.Areas.User.Models.IndustrialDesign
@using Domain.Web.Models.Attachment
@{
    ViewBag.Title = "ENDÜSTRİYEL TASARIM BAŞVURUSU";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@model IndustrialDesignApplicationViewModel
<div class="m-content" style="padding:0">
    <!--Begin::Main Portlet-->
    <div class="m-portlet">
        <!--end: Portlet Head-->
        <!--begin: Portlet Body-->
        <div class="m-portlet__body m-portlet__body--no-padding">
            <!--begin: Form Wizard-->
            <div class="row m-row--no-padding">
                <div class="col-xl-12 col-lg-12">
                    @using (Html.BeginForm("AddOrUpdateIndustrialDesignApplication", "IndustrialDesign", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="m-portlet">
                            <div class="m-portlet__body">
                                <div class="row px-4 mb-3 mt-2">
                                    <div class="m-alert m-alert--icon m-alert--icon-solid m-alert--outline alert alert-info w-100" role="alert">
                                        <div class="m-alert__icon">
                                            <i class="flaticon-exclamation-1"></i>
                                            <span></span>
                                        </div>
                                        <div class="m-alert__text">
                                            <strong>Dikkat!</strong><br />
                                            Aşağıdaki formu lütfen sizden istenen bilgiler doğrultusunda eksiksiz doldurunuz.
                                        </div>
                                    </div>
                                </div>
                                @Html.HiddenFor(m => m.IndustrialDesignApplicationDetail.IndustrialDesignApplicationDetailId)
                                <div class="row px-4 mb-2 mt-2">
                                    @Html.DomainFor().TextBoxFor(m => m.IndustrialDesignApplicationDetail.Title).SetParentCss("col-12")
                                </div>
                                @Html.Partial("_Attachment", new AttachmentViewModel
                                   {
                                       RelatedEntity = EnumRelatedEntity.IndustrialDesignApplicationDetail,
                                       RelatedEntityId = Model.IndustrialDesignApplicationDetail.IndustrialDesignApplicationDetailId
                                   })
                            </div>
                            <div class="m-portlet__foot text-right">
                                @Html.Domain().Button("btnSave").SetType(ButtonType.submit).SetIcon("fa fa-arrow-circle-right").SetIconAlignment(ButtonIconAlignment.right).SetStyle(ButtonStyle.submit).SetTitle("İleri")
                            </div>
                        </div>
                    }
                </div>
            </div>
            <!--end: Form Wizard-->
        </div>
        <!--end: Portlet Body-->
    </div>
    <!--End::Main Portlet-->
</div>