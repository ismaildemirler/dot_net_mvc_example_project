@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHosting.cshtml";

    var services = CacheManager.GetServices;
}

<style>
    img {
        width: 50px;
        height: 50px;
        margin-bottom: 1rem;
    }

    .services {
        text-align: left;
        padding-left: 2rem;
        padding-top: 1.2rem;
        font-size: 0.9rem;
    }

        .services li {
            list-style: circle;
            padding-left: 1rem;
        }

    .l-border {
        border-left: 1px solid #eee;
    }

    .r-border {
        border-right: 1px solid #eee;
    }
   
</style>


<div class="container_full menu"></div>

<div class="page_title">
    <div class="container">
        <div class="leaft_title"><h1>HİZMETLERİMİZ</h1></div>
        <div class="reght_pagenation">
            <a href="@Url.Action("Index", "Home")">Ana Sayfa</a> <i>/</i>
            Hizmetlerimiz
        </div>
    </div>
</div>

<div class="container-fluid wf py-5" style="background-color: #fff;">
    <div class="row">
        @if (services != null)
        {
            foreach (var service in services)
            {
        <div class="col-xs-12 col-lg-4 text-center px-5 l-border r-border">
            <a href="@Url.Action("Detail","Services", new { id=service.ServiceID.Encrypt(), area="" })">
                <img id="imgIcon" src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(service.Icon))" />
                <h3>@service.Header</h3>
                <p>@service.DescriptionText</p>
                </a>
        </div>
            }
        }
    </div>
</div>

